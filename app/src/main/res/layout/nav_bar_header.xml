<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/nav_header_pic"
    android:layout_height="160dp">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/tv_language"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/khmer"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_language"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_height="30dp"
        android:text="KH"/>
    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp"
        android:id="@+id/header_profile_pic"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:src="@drawable/profile_larrypage"/>
    <TextView
        android:textColor="#EEEE"
        android:layout_marginLeft="16dp"
        android:id="@+id/txt_name"
        android:layout_above="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Larry Page"/>
    <TextView
        android:textColor="#EEEE"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/txt_email"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="larrypage@gmail.com"/>
</RelativeLayout>